generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  COMPLETE
  PENDING
}

model Order {
  id            Bytes       @id @default(auto()) @map("_id") @db.ObjectId
  status        OrderStatus
  chatId        Int         @unique
  txId          String
  buyerName     String?
  buyerUser     String?
  remarketStage Int         @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}
